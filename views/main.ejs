<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <% include ./partials/head.ejs %>
  </head>
  <body>
      <div class="container">
          <form action="/main" method="post">
            <input type="text" name="thing"/>
            <input type="submit"/>
          </form>
            <% if(currentUser){ %>
              <div class="userstatus">
                <%=currentUser.username%>!
                <form action="/sessions?_method=DELETE" method="POST">
                <input type="submit" value="Logout" class="waves-effect waves-light btn"/>
              </form>
              </div>
              <% for(let i = 0; i < currentUser.things.length; i++) { %>
                <label class="container"><%=currentUser.things[i]%>
                <input type="checkbox" >
                <span class="checkmark"></span>
                </label>
              <%} %>





            <% } else { %>
              <a class="waves-effect waves-light btn" href="/users/new">Sign Up</a>
              <a class="waves-effect waves-light btn" href="/sessions/new">Log In</a>
            <% } %>
        </div>

  </body>
</html>
